<% if flash[:notice] %>
  <div class="alert alert-success text-center w-50 message">
    <button type="button", class="close" data-dismiss="alert">&times;</button>
    <%= flash[:notice] %>
  </div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger text-center w-50 message">
    <button type="button", class="close" data-dismiss="alert">&times;</button>
    <%= flash[:alert] %>
  </div>
<% end %>
